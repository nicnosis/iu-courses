$crimson = #990000
$red = #BD0000
$cream = #EEEDEB

$grey1 = #3D3D3D
$grey2 = #444444

$lightblue = #94D8FD
$blue = #2961CF
$lightgrey = #D5D3D5

$maire = #272822
$mercury = #E6E6E6
$pink = #F9266F
$straw = #E6DB74
$sublRobin = #66D9EF


$c1 = $crimson
$c2 = $cream

$sbColor = $grey1
$bodyColor = $maire

body
  background $bodyColor
  color $cream

#sidebar-wrapper
  background $sbColor
  a
    color $cream
  a:hover
    color $straw

#sidebar-wrapper > ul > li.sidebar-brand
  padding-left: 20px;
  padding-top: 5px;

#sidebar-wrapper > ul > li.sidebar-brand > a
  color $pink

img.monogram
  float left
  width 40px
  height auto

a
  color $sublRobin
  //color #F25B19
a:hover
  color $straw
  text-decoration none

b
  //color $sublYellow

h2:after
  content:' ';
  display:block;
  border:1px solid #d0d0d0;
  border-radius:4px;
  -webkit-border-radius:4px;
  -moz-border-radius:4px;
  box-shadow:inset 0 1px 1px rgba(0, 0, 0, .05);
  -webkit-box-shadow:inset 0 1px 1px rgba(0, 0, 0, .05);
  -moz-box-shadow:inset 0 1px 1px rgba(0, 0, 0, .05);


h2, h3
  color $pink
h4
  font-size 16px

li
  list-style none

.indent
  padding-left 2em