/*******************************************
*  VARS
*******************************************/
$crimson = #990000
$red = #BD0000
$cream = #EEEDEB

$grey1 = #3D3D3D
$grey2 = #444444

$lightblue = #94D8FD
$blue = #2961CF
$lightgrey = #D5D3D5

$maire = #272822
$mercury = #E6E6E6
$pink = #F9266F
$lima = #6CC72C
$orange = #FE9720
$straw = #E6DB74
$sublRobin = #66D9EF

$c1 = $crimson
$c2 = $cream

$sbColor = $grey1
$bodyColor = $maire

$headerFont = 'Fira Sans', sans-serif

/*******************************************
*  BODY
*******************************************/
body
  font-family 'Open Sans', sans-serif
  background $bodyColor
  color $cream

.big
  font-size larger

.indent
  padding-left 2em

a
  color $sublRobin
a:hover
  color $orange
  text-decoration none

b
  color $straw
  letter-spacing 1px

button.btn-iu
  background-color #1f1c2c
  border-radius 10px

button.btn-iu:hover
  color $pink

kbd
  color $pink

h2:after
  content:' ';
  display:block;
  border: 1px solid rgba(208, 208, 208, 0.4);
  border-radius:4px;
  -webkit-border-radius:4px;
  -moz-border-radius:4px;
  box-shadow:inset 0 1px 1px rgba(0, 0, 0, .05);
  -webkit-box-shadow:inset 0 1px 1px rgba(0, 0, 0, .05);
  -moz-box-shadow:inset 0 1px 1px rgba(0, 0, 0, .05);

h1, h2, h3, h4
  font-family: $headerFont
  letter-spacing 1px
  font-weight normal
h2, h3
  color $pink
h4
  margin-top 10px
  margin-bottom 5px
  font-family $headerFont
  color $lima
  font-size 16px

li
  list-style none
  padding-bottom 0.4em

/*******************************************
*  NAV
*******************************************/
#sidebar-wrapper
  background $sbColor
  a
    color $cream
  a:hover
    color $straw

#sidebar-wrapper > ul > li.sidebar-brand
  padding-left: 20px;
  padding-top: 5px;

#sidebar-wrapper > ul > li.sidebar-brand > a
  color $pink

img.monogram
  float left
  width 40px
  height auto

#sidebar-wrapper > ul > li.dropdown.open > ul
  background: #272822
  margin-left 20px

/*******************************************
*  GRID
*******************************************/
.slide
  max-width 750px

dt.tut-desc
  color $lima
  width 200px
  overflow-wrap break-word;
  white-space normal

dd
  padding-left 2em
